# ProTradeAI Pro+ Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# TELEGRAM CONFIGURATION (REQUIRED)
# =============================================================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get chat ID by messaging your bot and visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Your trading capital in USD
TRADING_CAPITAL=10000

# Risk management settings (optional - defaults in config.py)
# RISK_PER_TRADE=0.02
# MAX_DAILY_TRADES=10
# MAX_OPEN_POSITIONS=5

# =============================================================================
# BINANCE API (Optional - only for enhanced data)
# =============================================================================
# Note: These are NOT required for the bot to work
# The bot uses public Binance API endpoints by default
# BINANCE_API_KEY=your_binance_api_key_here
# BINANCE_SECRET_KEY=your_binance_secret_key_here

# =============================================================================
# DASHBOARD CONFIGURATION (Optional)
# =============================================================================
# Dashboard server settings
# DASHBOARD_HOST=0.0.0.0
# DASHBOARD_PORT=5000
# DASHBOARD_DEBUG=False

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================
# AI Model settings
# MODEL_RETRAIN_DAYS=7
# CONFIDENCE_THRESHOLD=70

# Leverage settings
# DEFAULT_LEVERAGE_MODE=moderate  # conservative, moderate, aggressive

# Alert format
# TELEGRAM_ALERT_FORMAT=pro_plus  # pro_plus or summary

# =============================================================================
# EXAMPLE CONFIGURATION
# =============================================================================
# Here's an example of how your .env file should look:
#
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_CHAT_ID=123456789
# TRADING_CAPITAL=5000
